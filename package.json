{
  "name": "crossfire",
  "version": "1.0.0",
  "description": "CrossFire is a multiplayer topdown pixel arena shooter",
  "main": "index.js",
  "scripts": {
    "dev": "run-p -rns webpack-watch node-server-dev node-client",
    "webpack-watch": "webpack -w",
    "node-server": "node server/index.js",
    "node-server-dev": "nodemon server/index.js --exec babel-node",
    "node-client": "node client/static-server.js",
    "start": "webpack && run-p -r node-server node-client",
    "client-build": "webpack && mkdir surge && cp client/public/build/bundle.js surge/ && cp -r client/public/assets/* surge/ && echo crossfire.placeofthin.gs >> surge/CNAME && surge surge/ && rm -rf surge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scott-ad-riley/crossfire.git"
  },
  "author": "Scott Riley",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/scott-ad-riley/crossfire/issues"
  },
  "homepage": "https://github.com/scott-ad-riley/crossfire#readme",
  "dependencies": {
    "express": "^4.14.0",
    "lodash": "^4.13.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "redux": "^3.5.2",
    "short-dom": "^1.2.2",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "webpack": "^3.6.0"
  }
}
